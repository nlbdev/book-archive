<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec" script="../../main/resources/make-abstract.xpl" xmlns:p="http://www.w3.org/ns/xproc" xmlns:c="http://www.w3.org/ns/xproc-step"
    xmlns:px="http://www.daisy.org/ns/pipeline/xproc" xmlns:d="http://www.daisy.org/ns/pipeline/data" xmlns:epub="http://www.idpf.org/2007/ops" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:opf="http://www.idpf.org/2007/opf" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:nlb="http://www.nlb.no/ns/">

    <x:scenario label="nlb:make-abstract">
        <x:call step="nlb:make-abstract">
            <x:option name="book-dir" select="resolve-uri('../resources/dontworrybehappy/',base-uri())"/>
            <x:option name="abstract-dir" select="concat($temp-dir,'abstract-dir/')"/>
        </x:call>

        <x:context label="result">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect type="xpath" label="The format should be 'DAISY 2.02'" test="/*/@format" equals="'DAISY 2.02'"/>
    </x:scenario>

</x:description>
